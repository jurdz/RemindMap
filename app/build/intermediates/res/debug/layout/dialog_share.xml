<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        style="?android:listSeparatorTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/task_title_label"
        android:textColor="@color/BlueA700" />

    <TextView
        android:id="@+id/p_task_list_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp" />

    <TextView
        style="?android:listSeparatorTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/task_list_collaborators"
        android:textColor="@color/BlueA700" />

    <ListView
        android:id="@+id/shareListView"
        android:layout_width="match_parent"
        android:layout_height="160dp" />

    <TextView
        style="?android:listSeparatorTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/task_list_edit"
        android:textColor="@color/BlueA700" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/p_task_list_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:drawableLeft="@drawable/ic_add_collaborator"
            android:text="@string/task_list_add_collaborators" />

        <Button
            android:id="@+id/p_task_list_rem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:drawableLeft="@drawable/ic_remove_collaborator"
            android:text="@string/task_list_remove_collaborators" />

    </LinearLayout>

</LinearLayout>
