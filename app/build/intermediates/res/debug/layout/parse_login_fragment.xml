<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/parse_login"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/activity_margin">

    <ImageView
        android:id="@+id/app_wordmark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:contentDescription="@string/parse_logo_content_description"
        android:src="@drawable/app_wordmark"/>

    <EditText
        android:id="@+id/login_username_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/parse_username_input_hint"
        android:textColor="@android:color/white"/>

    <EditText
        android:id="@+id/login_password_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:hint="@string/parse_password_input_hint"
        android:inputType="textPassword"
        android:selectAllOnFocus="true"
        android:textColor="@android:color/white"/>

    <LinearLayout
        android:id="@+id/parse_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/parse_signup_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/parse_signup_button_label"/>

        <Button
            android:id="@+id/parse_login_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/parse_login_button_label"/>
    </LinearLayout>

    <Button
        android:id="@+id/facebook_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/facebook_login_button"
        android:drawableLeft="@drawable/logo_facebook"
        android:paddingLeft="16dp"
        android:text="@string/parse_facebook_login_button_label"
        android:textColor="@android:color/white"
        android:visibility="gone"/>

    <Button
        android:id="@+id/parse_login_help"
        style="@style/ClearButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/parse_forgot_password_button_label"/>

</LinearLayout>
