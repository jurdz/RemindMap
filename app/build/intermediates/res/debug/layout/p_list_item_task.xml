<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/task_list_item_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="4dp">

    <CheckBox
        android:id="@+id/list_item_completed_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:focusable="false"
        />

    <TextView
        android:id="@+id/list_item_title_text_view"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/list_item_completed_check_box"
        android:textColor="@color/BlueA700"
        android:textSize="24sp"
        tools:text="Task Title"/>

    <TextView
        android:id="@+id/list_item_location_text_view"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_item_title_text_view"
        android:layout_toRightOf="@id/list_item_completed_check_box"
        android:focusable="false"
        tools:text="Task Location"/>

    <TextView
        android:id="@+id/list_item_date_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_toRightOf="@id/list_item_title_text_view"
        android:focusable="false"
        android:gravity="right"
        android:textColor="@color/BlueA700"
        android:textSize="16sp"
        tools:text="until"/>

</RelativeLayout>
